<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE MEEGO_IM_TOOLBAR_WIDGET SYSTEM 'VirtualKeyboardToolbarDTD.dtd'>
<input-method version="1">
    <toolbar>
        <items>
            <button name="emoticon" group="emoticon" showon="always" alignment="left" text="" text_id="" icon_id="icon-m-messaging-smiley-happy" toggle="false" pressed="false">
                <actions>
                    <sendkeysequence keysequence="Meta+j"> </sendkeysequence>
                </actions>
            </button>
            <button name="attach" group="attach" priority="1" showon="always" alignment="left" text="" text_id="" icon_id="icon-m-conversation-attachment" toggle="false" pressed="false">
                <actions>
                    <sendkeysequence keysequence="Meta+k"> </sendkeysequence>
                </actions>
            </button>
            <label name="mms_prompt" group="mms_prompt" alignment="right" text="" text_id=""/>
            <button name="send" group="send" priority="3" showon="always" alignment="right" text="" text_id="qtn_comm_send" icon_id="" toggle="false" highlighted="true">
                <actions>
                    <sendkeysequence keysequence="Meta+l"> </sendkeysequence>
                </actions>
            </button>
        </items>
        <layout> 
            <item name="attach" />
            <item name="emoticon" />
            <item name="mms_prompt" />
            <item name="send" />
        </layout>
    </toolbar>
</input-method>
